<Page x:Class="VeiebryggeApplication.regnr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeiebryggeApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="regnr" Background="White">

    <Grid>
        <Grid Margin="0,-10,0,10">
            <DataGrid Name="grdVehicles" AutoGenerateColumns="False" Margin="50,230,45,10" CanUserAddRows="True"
                            HeadersVisibility="Column">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Registration number" Width="120" Binding="{Binding regNr}"/>

                    <DataGridTextColumn Header="Name of vehicle" Width="100" Binding="{Binding vehicleName}"/>

                    <DataGridTextColumn Header="Equipment" Width="100" Binding="{Binding equipment}"/>
                    
                    <DataGridTextColumn Header="Number of wheels" Width="110" Binding="{Binding boolWheels}"/>

                    <DataGridTextColumn Header="Year" Width="60" Binding="{Binding year}"/>

                </DataGrid.Columns>

            </DataGrid>
            <TextBox Name="regText" HorizontalAlignment="Left" Height="23" Margin="345,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Registration number" HorizontalAlignment="Left" Margin="182,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5"/>
            <TextBox Name="nameText" HorizontalAlignment="Left" Height="23" Margin="345,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="wheelsText" HorizontalAlignment="Left" Height="23" Margin="345,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="yearText" HorizontalAlignment="Left" Height="23" Margin="345,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <TextBox x:Name="equipmentText" HorizontalAlignment="Left" Height="23" Margin="345,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Year" HorizontalAlignment="Left" Margin="182,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5"/>
            <Label Content="Number of wheels" HorizontalAlignment="Left" Margin="182,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5"/>
            <Label Content="Name of vehicle" HorizontalAlignment="Left" Margin="182,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5"/>
            <Label Content="Equipment" HorizontalAlignment="Left" Margin="182,173,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5"/>
            <Button Content="Search" HorizontalAlignment="Left" Margin="555,70,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Insert" HorizontalAlignment="Left" Margin="555,129,0,0" VerticalAlignment="Top" Width="75" Click="Insert_Button_Click"/>
            <Button Content="Update" HorizontalAlignment="Left" Margin="680,102,0,0" VerticalAlignment="Top" Width="75" Click="Load_Button_Click"/>

        </Grid>
    </Grid>
</Page>
