<Page x:Class="VeiebryggeApplication.regnr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeiebryggeApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="regnr" Background="#FF404040">

    <Page.Resources>
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Foreground" Value="#FFB3B3B3"/>
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="25"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Margin="0,-10,0,10">
            <DataGrid Name="grdVehicles" AutoGenerateColumns="False" Margin="50,230,45,10" CanUserAddRows="True"
                            HeadersVisibility="Column">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Registration number" Width="120" Binding="{Binding regNr}"/>

                    <DataGridTextColumn Header="Name of vehicle" Width="100" Binding="{Binding vehicleName}"/>

                    <DataGridTextColumn Header="Number of wheels" Width="110" Binding="{Binding boolWheels}"/>

                    <DataGridTextColumn Header="Year" Width="60" Binding="{Binding year}"/>

                </DataGrid.Columns>

            </DataGrid>
            <TextBox Name="regText" PreviewTextInput="regText_PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="345,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="regText_TextChanged"/>
            <Label Content="Registration number" HorizontalAlignment="Left" Margin="170,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5" Foreground="White"/>
            <TextBox Name="nameText" PreviewTextInput="nameText_PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="345,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="wheelsText" PreviewTextInput="wheelsText_PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="345,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.458,1.13"/>
            <TextBox Name="yearText" PreviewTextInput="yearText_PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="345,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
            <Label Content="Year" HorizontalAlignment="Left" Margin="200,162,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5" Foreground="White"/>
            <Label Content="Number of wheels" HorizontalAlignment="Left" Margin="170,119,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5" Foreground="White"/>
            <Label Content="Name of vehicle" HorizontalAlignment="Left" Margin="170,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.212,0.5" Foreground="White"/>
            <Button Content="Search" HorizontalAlignment="Left" Margin="680,119,0,0" VerticalAlignment="Top" Width="75" Click="Search_Button_Click"/>
            <Button Content="Insert" HorizontalAlignment="Left" Margin="545,119,0,0" VerticalAlignment="Top" Width="75" Click="Insert_Button_Click"/>
            <Button Content="Delete" HorizontalAlignment="Left" Margin="680,173,0,0" VerticalAlignment="Top" Width="75" Click="Delete_Button_Click"/>
            <!-- <Button Content="Update" HorizontalAlignment="Left" Margin="555,63,0,0" VerticalAlignment="Top" Width="75" Click="Update_Button_Click"/> -->

        </Grid>
    </Grid>
</Page>
