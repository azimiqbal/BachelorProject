<Page x:Class="VeiebryggeApplication.RunTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:input="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeiebryggeApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunTest" Background="white">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" FontWeight="SemiBold" Margin="140,20,20,20" Text="Run test" FontSize="40"/>
        <DataGrid Name="grdVehicles" />

        <TextBlock Grid.Column="1" Grid.Row="2" FontWeight="SemiBold" Margin="20,20,20,20"
            Text="Registration number:" FontFamily="Segoe UI" />
        <Button x:Name="SearchButton" Click="Search_Button_Click" Content="Search" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Width="77" Height="35"/>

        <!--<Border Margin="8" Grid.Column="2" Grid.Row="2"
                Width="180" 
                Height="60">
            <Grid Margin="0,0,0,8">
                <TextBox Name="TextBox" Background="Transparent" HorizontalContentAlignment="Center"  HorizontalAlignment="Center" VerticalContentAlignment="Center" Height="26" Width="120" TabIndex="5" />
            </Grid>
        </Border> -->

        <TextBlock Grid.Column="1" Grid.Row="3" FontWeight="SemiBold" Margin="20,20,20,20"
            Text="Equipment:" FontFamily="Segoe UI" />
        <Border Margin="8" Grid.Column="2" Grid.Row="3"
                Width="160" 
                Height="60">
            <TextBox Background="Transparent" HorizontalContentAlignment="Center"  HorizontalAlignment="Center" VerticalContentAlignment="Center" Name="TextBox2" Height="57" Width="160" TabIndex="5" />
        </Border>


        <Button x:Name="DiagnosticsButton" Click="Diagnostics_Button_Click" Content="Run diagnostics" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Width="120" Padding="20,20,20,20" Margin="20,20,20,20"/>
        <Button x:Name="RunButton" Click="Run_Button_Click" Content="Run test" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="3" Width="120" Padding="20,20,20,20" Margin="40,20,20,20"/>
    </Grid>
</Page>
