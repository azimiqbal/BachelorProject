<Page x:Class="VeiebryggeApplication.RunTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeiebryggeApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunTest">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="60"
            Text="Run test" Grid.ColumnSpan="3" Margin="20,20,20,20" />


        <TextBlock Grid.Column="1" Grid.Row="2" FontWeight="SemiBold" Margin="20,20,20,20"
            Text="Registration number:" FontFamily="Segoe UI" />


        <Border Margin="8" Grid.Column="2" Grid.Row="2"
                Width="180" 
                Height="60">
            <Grid Margin="0,0,0,8">
                <TextBox Background="Transparent" HorizontalContentAlignment="Center"  HorizontalAlignment="Center" VerticalContentAlignment="Center" Name="TextBox" Height="36" Width="150" TabIndex="5" />
            </Grid>
        </Border>



        <TextBlock Grid.Column="1" Grid.Row="3" FontWeight="SemiBold" Margin="20,20,20,20"
            Text="Vehicles:" FontFamily="Segoe UI" />
        <ComboBox x:Name="myComboBox" Grid.Column="2" Grid.Row="3" Margin="10,20,20,20">
            <ComboBoxItem Content="Select vehicle" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="Toyota Avensis"></ComboBoxItem>
            <ComboBoxItem Content="Nissan Micra"></ComboBoxItem>
            <ComboBoxItem Content="Audi R8"></ComboBoxItem>
        </ComboBox>


        <TextBlock Grid.Column="1" Grid.Row="4" FontWeight="SemiBold" Margin="20,20,20,20"
            Text="Equipment:" FontFamily="Segoe UI" />
        <Border Margin="8" Grid.Column="2" Grid.Row="4"
                Width="160" 
                Height="60">
            <Grid Margin="0,0,0,8">
                <TextBox Background="Transparent" HorizontalContentAlignment="Center"  HorizontalAlignment="Center" VerticalContentAlignment="Center" Name="TextBox2" Height="36" Width="150" TabIndex="5" />
            </Grid>
        </Border>


        <TextBlock Grid.Column="1" Grid.Row="5" FontWeight="SemiBold" Margin="20,10,20,20" 
            Text="Generate report:" FontFamily="Segoe UI" />
        <RadioButton Name="CheckBox" Grid.Column="2" Grid.Row="5" Foreground="Black"  
           Canvas.Left="20" Canvas.Top="10" Content="Yes"  
           FontFamily="Georgia" FontSize="20" FontWeight="Bold" Margin="50,22,5,3" >
        </RadioButton>
        <RadioButton Name="MrCheckBox" Grid.Column="3" Grid.Row="5" Foreground="Black"  
           Canvas.Left="20" Canvas.Top="10" Content="No"  
           FontFamily="Georgia" FontSize="20" FontWeight="Bold" Margin="-2,20,5,5" >
        </RadioButton>

        <Button x:Name="SubmitButton" Click="SubmitButton_Click" Content="Run test" Grid.Column="4" Grid.Row="3" Width="150" Padding="20,20,20,20"/>

    </Grid>
</Page>
